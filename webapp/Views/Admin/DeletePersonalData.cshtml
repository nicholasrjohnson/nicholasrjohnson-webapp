@model webapp.Models.DeletePersonalDataModel
@{
    ViewData["Title"] = "Nicholas R Johnson - Admin";
}

<div class="container-fluid" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="container">
                <h4>@ViewData["Title"]</h4>

                <div class="alert alert-warning" role="alert">
                    <p>
                        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                    </p>
                </div>
                <div>
                @using (Html.BeginForm("DeletePersonalData", "Admin", FormMethod.Post, new { id = "form", style="padding: 20px" }))
                {
                    <div asp-validation-summary="All" class="text-danger"></div>
                          <div class="form-group">
                               <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                         </div>
                        <button class="btn btn-primary blurb-button m-2 p-2" type="submit">Delete data and close my account</button>
                }
        </div>
</div>
