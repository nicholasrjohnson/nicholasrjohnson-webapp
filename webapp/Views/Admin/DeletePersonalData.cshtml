@model webapp.Models.DeletePersonalDataModel
@{
    ViewData["Title"] = "Nicholas R Johnson - Admin";
}

<div class="container-fluid" style="margin-top: 200px; margin-bottom: 200px;">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h4>@ViewData["Title"]</h4>

                <div class="alert alert-warning" role="alert">
                    <p>
                        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                    </p>
                </div>
                <div>
                <form id="delete-user" method="post" class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                        @if (Model.RequirePassword)
                        {
                          <div class="form-group">
                               <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                         </div>
                        }
                        <button class="btn btn-danger" type="submit">Delete data and close my account</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}