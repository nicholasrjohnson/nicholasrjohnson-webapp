@model webapp.Models.SetPasswordModel
@{
    ViewData["Title"] = "Nicholas R Johnson - Admin";
}

<div class="container-fluid" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="container">
                <h4>Set your password</h4>
                <partial name="_StatusMessage" for="StatusMessage" />
                <p class="text-info">
                    You do not have a local username/password for this site. Add a local
                    account so you can log in without an external login.
                </p>
                <div class="row">
                    <div class="col-md-6">
                    @using (Html.BeginForm("SetPassword", "Admin", FormMethod.Post, new { id = "form", style="padding: 20px" }))
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                           <label asp-for="Input.NewPassword"></label>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary m-2">Set password</button>
                        }
                    </div>
        </div>
    </div>
</div>
                    