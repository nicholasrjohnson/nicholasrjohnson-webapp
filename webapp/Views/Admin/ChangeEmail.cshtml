@model webapp.Models.ChangeEmailModel
@{
    ViewData["Title"] = "Nicholas R Johnson - Admin";
}

<div class="container-fluid" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="container">
                <h4>@ViewData["Title"]</h4>
                <p>@ViewBag.Message</p>                
                    @using (Html.BeginForm("ChangeEmail", "Admin", FormMethod.Post, new { id = "form", style="padding: 20px" }))
                    {
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <div class="input-group">
                       <input asp-for="Email" class="form-control" disabled />
                       <div class="input-group-append">
                          <span class="input-group-text text-success font-weight-bold">âœ“</span>
                       </div>
                   </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewEmail"></label>
                    <input asp-for="Input.NewEmail" class="form-control" />
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary blurb-button m-2 p-2">Change email</button>
            }  
    </div>
</div>
